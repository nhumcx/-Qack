
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow text-center">
        <h1><%= @duck.name %></h1>
        <%= cl_image_tag @duck.photo.key, crop: :fill, width: 500 %>
        <p class="text-muted">Category:</p>
        <h3><%= @duck.category %></h3>
        <p class="text-muted">Description:</p>
        <h3><%= @duck.description %></h3>
        <div>
        <% unless @duck.user == current_user %>
          <div class="duck-link btn-group" role="group" aria-label="Basic example">
            <p><%= link_to "Book this duck", new_duck_booking_path(@duck), class: 'btn btn-outline-warning'  %></p>
            <p><%= link_to "Back to all ducks", ducks_path, class: 'btn btn-outline-warning' %></p>
          </div>
        <% else %>
          <div class="duck-link btn-group" role="group" aria-label="Basic example">
            <p><%= link_to "Delete this duck", duck_path(@duck), class: 'btn btn-outline-warning', data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this duck?" } %></p>
            <p><%= link_to "Back to my ducks", my_ducks_path, class: 'duck-link btn btn-outline-warning'  %></p>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
