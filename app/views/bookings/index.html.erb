<div class="container py-2">
  <h2>All my quackies</h2>
</div>

  <div class="cards">
    <% @bookings.each do |booking| %>
        <div class="card-category flex-column" style="background-image: linear-gradient(rgba(140, 204, 224, 0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path booking.duck.photo.key, width: 200, crop: :fill %>)">
          <h4><%= link_to booking.duck.name, duck_path(booking.duck) %></h4>
          <h4><%=booking.status %>:</h4>
        </div>
    <% end %>
  </div>
